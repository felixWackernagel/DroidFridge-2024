<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".fragment.HomeFragment"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_store_24"
            android:contentDescription="@string/home_description_store_icon"
            android:layout_marginEnd="8dp"
            app:tint="@color/primary200"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bakery_dining_24"
            android:contentDescription="@string/home_description_bakery_dining_icon"
            android:layout_marginEnd="8dp"
            app:tint="@color/primary200"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_shopping_basket_24"
            android:contentDescription="@string/home_description_basket_icon"
            android:layout_marginEnd="8dp"
            app:tint="@color/primary200"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cake_24"
            android:contentDescription="@string/home_description_cake_icon"
            android:layout_marginEnd="8dp"
            app:tint="@color/primary200"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favorite_filled_24"
            android:contentDescription="@string/home_description_heart_icon"
            app:tint="@color/primary200"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@string/font_roboto_light"
        android:textSize="20sp"
        android:lineSpacingMultiplier="1.2"
        android:gravity="center"
        android:text="@string/home_empty_dashboard" />

</LinearLayout>